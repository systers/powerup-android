<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/curtains"
    tools:context="powerup.systers.com.SelectFeaturesActivity"
    >


    <ImageView
        android:layout_width="@dimen/select_feature_image_view"
        android:layout_height="@dimen/select_feature_image_view"
        android:layout_marginTop="@dimen/select_feature_image_view_margin"
        android:id="@+id/imageViewSelectFeature"
        android:src="@drawable/hair1"
        android:layout_below="@+id/textViewSelectFeature"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:id="@+id/leftSelectFeature"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/select_feature_image_view_margin"
        android:src="@drawable/ic_keyboard_arrow_left_white_18dp"
        android:layout_below="@+id/imageViewSelectFeature"
        android:layout_alignLeft="@+id/imageViewSelectFeature"
        android:layout_alignStart="@+id/imageViewSelectFeature" />

    <ImageButton
        android:id="@+id/rightSelectFeature"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/select_feature_image_view_margin"
        android:src="@drawable/ic_keyboard_arrow_right_white_18dp"
        android:layout_below="@+id/imageViewSelectFeature"
        android:layout_alignRight="@+id/imageViewSelectFeature"
        android:layout_alignEnd="@+id/imageViewSelectFeature" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_marginBottom="@dimen/select_feature_image_view_margin"
        android:hint="Choose your feature.."
        android:id="@+id/textViewSelectFeature"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/select_feature_image_view_margin" />

    <Button
        android:id="@+id/continueButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/endingscreen6"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/select_feature_coins"
        android:textSize="@dimen/final_avatar_text_view_text_size"
        android:textColor="@color/powerup_black"
        android:background="@color/powerup_blue_green"
        android:id="@+id/textView"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>
