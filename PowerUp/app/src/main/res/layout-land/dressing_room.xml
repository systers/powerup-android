<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dressing_room"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <ImageView
            android:id="@+id/faceView"
            android:layout_width="@dimen/face_view_width"
            android:layout_height="@dimen/face_view_height"
            android:layout_centerHorizontal="true"
            android:src="@drawable/face1" />

        <ImageView
            android:id="@+id/eyeView"
            android:layout_width="@dimen/eye_view_width"
            android:layout_height="@dimen/eye_view_height"
            android:layout_alignBottom="@id/faceView"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/eye_view_margin_bottom"
            android:src="@drawable/eye1" />

        <ImageView
            android:id="@+id/hairView"
            android:layout_width="@dimen/hair_view_width"
            android:layout_height="@dimen/hair_view_height"
            android:layout_centerHorizontal="true"
            android:src="@drawable/hair2" />

        <ImageView
            android:id="@+id/clothView"
            android:layout_width="@dimen/cloth_view_width"
            android:layout_height="@dimen/cloth_view_height"
            android:layout_alignTop="@+id/eyeView"
            android:layout_centerHorizontal="true"
            android:src="@drawable/cloth1" />

        <ImageView
            android:id="@+id/bagView"
            android:layout_width="@dimen/select_feature_bag_view_width"
            android:layout_height="@dimen/select_feature_bag_view_height"
            android:layout_alignLeft="@+id/hairView"
            android:layout_alignStart="@+id/hairView"
            android:layout_below="@+id/glassesView" />
        <ImageView
            android:id="@+id/glassesView"
            android:layout_width="@dimen/select_feature_glasses_view_width"
            android:layout_height="@dimen/select_feature_glasses_view_height"
            android:layout_alignBottom="@+id/eyeView"
            android:layout_centerHorizontal="true" />
        <ImageView
            android:id="@+id/hatView"
            android:layout_width="@dimen/select_feature_hat_view_width"
            android:layout_height="@dimen/select_feature_hat_view_height"
            android:layout_above="@+id/eyeView"
            android:layout_centerHorizontal="true" />
        <ImageView
            android:id="@+id/necklaceView"
            android:layout_width="@dimen/select_feature_necklace_view_width"
            android:layout_height="@dimen/select_feature_necklace_view_height"
            android:layout_alignBottom="@+id/faceView"
            android:layout_alignLeft="@+id/clothView"
            android:layout_alignStart="@+id/clothView" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/clothesImageView"
        android:layout_width="@dimen/dressing_room_variants_width"
        android:layout_height="@dimen/dressing_room_variants_height"
        android:layout_alignLeft="@+id/accessoriesImageView"
        android:layout_alignStart="@+id/accessoriesImageView"
        android:src="@drawable/clothes_text" />

    <ImageView
        android:id="@+id/hairImageView"
        android:layout_width="@dimen/dressing_room_variants_width"
        android:layout_height="@dimen/dressing_room_variants_height"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/clothesImageView"
        android:layout_marginTop="@dimen/dressing_room_variants_margin_land"
        android:src="@drawable/hair_text" />

    <ImageView
        android:id="@+id/accessoriesImageView"
        android:layout_width="@dimen/dressing_room_variants_width"
        android:layout_height="@dimen/dressing_room_variants_height"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/hairImageView"
        android:layout_marginTop="@dimen/dressing_room_variants_margin_land"
        android:src="@drawable/accessories" />
    <ImageView
        android:id="@+id/karma_star"
        android:layout_width="@dimen/karma_star_width"
        android:layout_height="@dimen/karma_star_height"
        android:src="@drawable/karma"/>
    <TextView
        android:id="@+id/karmaPoints"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/karma_star_height"
        android:layout_toRightOf="@id/karma_star"
        android:gravity="center"
        android:text="0"
        android:textSize="@dimen/karma_points_textSize"
        android:textColor="@color/powerup_black"/>

    <ImageView
        android:layout_width="@dimen/skills_bar_width"
        android:layout_height="@dimen/skills_bar_height"
        android:src="@drawable/skill_bars"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>